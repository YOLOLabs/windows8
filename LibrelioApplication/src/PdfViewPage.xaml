                            <Grid>
                                <Image Source="{Binding Image}" Stretch="UniformToFill" Width="{Binding Width}" Height="{Binding Height}" Margin="50,0" />
                                <ProgressRing IsActive="{Binding Loading}" Width="100" Height="100" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </local:MyListView.ItemTemplate>

                </local:MyListView>
                
