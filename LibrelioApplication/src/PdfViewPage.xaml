		      VerticalScrollMode="Auto" HorizontalScrollMode="Auto" ZoomMode="Enabled">

                <!-- Changed by Dorin Damaschin-->
                <!-- Added Loaded handler-->
                <local:MyListView  x:Name="pagesListView" SelectionMode="None" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False" ManipulationMode="None" IsZoomedInView="True" Loaded="pagesListView_Loaded">
                    <local:MyListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </local:MyListView.ItemsPanel>

                    <local:MyListView.ItemTemplate>
                        <DataTemplate>
